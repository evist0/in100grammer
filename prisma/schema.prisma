generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id

  username String?

  fullName String?

  description String?

  followers   Int?
  following   Int?
  postsAmount Int?

  lastPost DateTime?

  phone String?
  email String?
  site  String?

  potentiallyBusiness Boolean?
  business            Boolean?
  businessCategory    String?

  countryCode   String?
  countryReason String?
}

model Accounts {
  iam String @id

  busy Boolean
  dead Boolean
}

model Proxy {
  host     String @id
  port     String
  login    String
  password String

  busy Boolean
  dead Boolean
}
